{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}class{% endblock %}
{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "classes.plural" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "elearning" | trans }}</a></li>
        <li><a href="{{ path('elearning_classes_index') }}">{{ "classes.plural" | trans }}</a></li>
      </ol>
    </section>

    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
            {% include 'CoreBundle:Base:alert.messages.html.twig' %}
            
            <div class="box">
                <div class="box-body">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a href="{{ path('elearning_classes_new') }}" class="btn btn-success btn-flat">
                                {{ "add.new" | trans }} <i class="ion-plus"></i>
                            </a>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="classes-table">
                        <thead>
                        <tr>
                            <th class="hidden-480">ID</th>
                            <th class="hidden-480">{{ 'classes.singular' | trans }}</th>
                            <th class="hidden-480">{{ 'course.singular' | trans }}</th>
                            <th style="width:70px;"></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>    
                 </div>
            </div>
        </div>
      </div>
    </section>      
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
            var table_columns = [
                { "mData": "id" },
                {
                    "mData": function (source) {
                        return '<a href="' + source.id + '">' + source.name + '</a>';
                    }
                },
                { "mData": "course" },
                {
                    "mData": function(source) {
                        var html = '<a class="btn btn-xs btn-primary btn-flat" data-toggle="tooltip" title="" data-original-title="Editar" href="' + source.id + '/edit"><i class="fa fa-edit"></i> Editar </a>';
                        return  html;
                    }
                }
            ];

            jQuery(document).ready(function() {

                TableManaged.init(
                    '#classes-table',
                    '{{ url('elearning_classes_listjson') }}',
                    [3],
                    table_columns,
                    '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
            });
    </script>
{% endblock %}